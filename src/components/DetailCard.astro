---
import dayjs from "dayjs";
import relativeTime from "dayjs/plugin/relativeTime";

import BaseCard from "./BaseCard.astro";
import { getDetails, type FrontMatterData } from "../data";
import type { DependencyType } from "../types";

dayjs.extend(relativeTime);

interface Props {
    title: string;
    tag: DependencyType;
    data: FrontMatterData;
}

const { title, tag, data } = Astro.props;
const details = await getDetails(data);
---

<BaseCard title={title} tag={tag} description={details.description} sections={details.sections} />

<style>
    .gradient {
        background-image: linear-gradient(-20deg, #e6f0f5 0%, #f1eef5 100%);
    }
</style>
