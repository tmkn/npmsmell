---
import type { DependencyType } from "../types";
import Badge from "./Badge.tsx";
import DetailCardSection from "./DetailCardSection.astro";

import dotsSvg from "./dots.svg?raw";
import npmLogo from "./npmlogo.svg?raw";

const dots = `url('data:image/svg+xml;base64, ${btoa(dotsSvg)}');`;
interface Props {
    title: string;
    tag: DependencyType;
    description: string;
    sections: {
        title: string;
        subtitle: string;
    }[];
}

const { title, tag, description, sections } = Astro.props;
---

<section>
    <div
        class="text-focus-in dots bg-surface border-card-border rounded-2xl border-2 px-4 py-4 drop-shadow-xl sm:px-6 md:py-12 md:py-16 lg:px-8"
    >
        <div class="mx-auto max-w-3xl text-center">
            <h2
                class="text-content flex items-center justify-center gap-x-2 text-xl font-bold md:text-3xl"
            >
                {title}
                <Badge type={tag} />
                <a
                    class="decoration-accent hover:text-accent underline decoration-2 underline-offset-2 hover:scale-125"
                    href={`https://www.npmjs.com/package/${title}`}
                    target="_blank"
                    rel="noreferrer noopener"
                >
                    <img
                        class="h-4"
                        src={`data:image/svg+xml;base64, ${btoa(npmLogo)}`}
                        alt="npm logo"
                    /></a
                >
            </h2>

            <p class="text-muted-subtle mt-4 sm:text-xl">
                {description}
            </p>
        </div>

        <div class="mt-8 sm:mt-12">
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                {sections.map(section => <DetailCardSection {...section} />)}
            </dl>
        </div>
    </div>
</section>

<style define:vars={{ dots }}>
    .dots {
        background-image: var(--dots);
        background-repeat: repeat;
    }

    body.dark .dots {
        background-blend-mode: overlay;
    }
</style>

<style>
    .text-focus-in {
        animation: text-focus-in 0.5s cubic-bezier(0.55, 0.085, 0.68, 0.53) both;
    }
