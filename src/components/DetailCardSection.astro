    <dt class:list={[{ "vibrate-1": wobble }, "text-md order-last font-medium text-gray-500"]}>
        {subtitle}
    </dt>

    <dd class:list={[{ "vibrate-1": wobble }, "text-xl font-extrabold text-indigo-600"]}>
        {title}
