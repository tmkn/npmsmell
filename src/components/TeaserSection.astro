---
import { getCollection } from "astro:content";

import Teaser from "./Teaser.astro";

interface Props {
    names: string[];
    highlight?: string;
}

const allDependencies = await getCollection("dependencies");
const { names } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4 mt-8">
    {names.map(name => <Teaser name={name} />)}
    {
        allDependencies.length > names.length && (
            <a
                href="smell"
                class="relative block overflow-hidden rounded border border-gray-100 p-4 sm:p-6 lg:p-8 grid text-center items-center hover:outline hover:outline-offset-2 hover:outline-2 outline-indigo-600 underline decoration-pink-500 decoration-2 underline-offset-2"
            >
                more
            </a>
        )
    }
</div>
