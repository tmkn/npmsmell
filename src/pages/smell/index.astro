---
import { getCollection } from "astro:content";
// import type { CollectionEntry } from "astro:content";

import Layout from "../../layouts/Layout.astro";

const allDependencies = await getCollection("dependencies");
---

<Layout>
    <div class="bg-white mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 mb-8">
        <article class="prose prose-sm max-w-none">
            <h2>Overview ({allDependencies.length} smells):</h2>
            {
                allDependencies.map(dependency => (
                    <p>
                        <a href={`smell/${dependency.slug}`}>{dependency.data.name}</a>
                    </p>
                ))
            }
        </article>
    </div>
</Layout>
